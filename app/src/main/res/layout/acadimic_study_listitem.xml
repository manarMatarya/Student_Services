<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="20dp"
        app:cardElevation="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:outlineAmbientShadowColor="#9A9A9A"
        android:outlineSpotShadowColor="#9A9A9A"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:text="@string/What_needs_to_be_done"
                    android:textColor="@color/bink"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/cairo"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:text="77"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tv11"
                    android:layout_toRightOf="@+id/tv11"
                    android:fontFamily="@font/cairo"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:text="@string/completed_hours"
                    android:textColor="@color/bink"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tv2"
                    android:layout_toRightOf="@+id/tv2"
                    android:fontFamily="@font/cairo"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:text="40"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/equation_hours"
                    android:textColor="@color/bink"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:text="40"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:fontFamily="@font/cairo"
                    android:text="@string/equation_hours"
                    android:textColor="@color/bink"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:text="40"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">>
                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/Incomplete_hours"
                    android:textColor="@color/bink"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:text="40"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/cairo"
                    android:text="@string/Total_hours_completed"
                    android:textColor="@color/bink"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:text="40"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_below="@+id/tv5"
                android:id="@+id/tv7"
                android:layout_toEndOf="@+id/tv66"
                android:paddingStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Remaining_hours"
                android:fontFamily="@font/cairo"
                android:textColor="@color/bink"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/tv66" />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:id="@+id/tv77"
                android:paddingStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:fontFamily="@font/cairo"
                android:textColor="@color/black"
                android:layout_below="@+id/tv5"
                android:layout_toEndOf="@+id/tv7"
                android:layout_toRightOf="@+id/tv7"
                android:paddingLeft="5dp" />
        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>