<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:outlineAmbientShadowColor="#9A9A9A"
        android:outlineSpotShadowColor="#9A9A9A"
        app:cardCornerRadius="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/list_parent_image"
                android:layout_width="90dp"
                android:layout_height="40dp"
               android:padding="5dp"
                android:src="@drawable/android"></ImageView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/list_parent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#762C59"
                android:layout_weight="1"
                android:fontFamily="@font/cairo"
                android:gravity="start|center_vertical"
                android:text="@string/ELearning"
                />
            <ImageView
                android:id="@+id/list_parent_image_arrow"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_weight="2"
                android:gravity="center"
                ></ImageView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>