<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="20dp"
        app:cardElevation="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:outlineAmbientShadowColor="#9A9A9A"
        android:outlineSpotShadowColor="#9A9A9A"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/acadimicstudy_list_parent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#762C59"
                android:layout_weight="1"
                android:fontFamily="@font/cairo"
                android:gravity="start|center_vertical"
                android:text="@string/ELearning"
                android:paddingLeft="20dp" />
            <ImageView
                android:id="@+id/acadimicstudy_list_parent_image_arrow"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_weight="3"
                android:gravity="center"
                ></ImageView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>