<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.changepassword"
    android:background="#fff"
    android:orientation="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:context="Fragments.menu">
        <ImageView
            android:layout_marginStart="20dp"
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@mipmap/aqsauniv"
            android:layout_marginLeft="20dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/img"
            android:text="@string/ALAQSA_Universit"
            android:textStyle="bold"
            android:fontFamily="@font/cairo_bold"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/img"
            android:layout_marginLeft="5dp">
        </TextView>
        <View
            android:layout_below="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/line"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"/>
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="327dp"
        android:layout_height="442dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="6dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/td"
            android:textSize="12sp"
            android:textColor="@color/colorp"
            android:fontFamily="@font/cairo_bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Current_Password"

            android:fontFamily="@font/cairo_bold"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />
        <EditText
            android:id="@+id/curruntpassword"
            android:layout_width="293dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:inputType="textPassword"

            android:layout_marginTop="10dp"
            android:background="@drawable/butunshap"
            android:backgroundTint="#E4E4E4"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_password"
            android:fontFamily="@font/cairo_bold"
            android:textSize="12sp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
             />
        <EditText
            android:id="@+id/newpassword"
            android:layout_width="293dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:inputType="textPassword"

            android:layout_marginTop="10dp"
            android:background="@drawable/butunshap"
            android:backgroundTint="#E4E4E4"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password"
            android:fontFamily="@font/cairo_bold"
            android:textSize="12sp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp" />
        <EditText
            android:id="@+id/confirnpassword"
            android:layout_width="293dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/butunshap"
            android:backgroundTint="#E4E4E4"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>
        <Button
            android:id="@+id/bntchangpassword"
            android:layout_width="305dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/butunshap"
            android:backgroundTint="@color/colorp"
            android:layout_marginTop="40dp"
            android:text="@string/change_Password"
            android:textColor="#fff"
            android:fontFamily="@font/cairo_bold"
            android:textSize="14sp"
            />
    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>