            <solid android:color="#D8D8D8" />
            <corners android:radius="19dp"/>
        </shape>
    </item>

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D8D8D8" />
